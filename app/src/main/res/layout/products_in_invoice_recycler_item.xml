<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rrProductsInInvoiceRecyclerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/shopping_cart_recycler_item_background2"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="10dp">


    <LinearLayout
        android:id="@+id/rrProductInInvoiceDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imgProductImageWrapper"
        android:layout_alignBottom="@+id/imgProductImageWrapper"
        android:layout_toEndOf="@+id/imgProductImageWrapper"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtProductName_ProductsInInvoiceRecyclerItem"
            android:gravity="start"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_weight="0.4" />


        <TextView
            android:id="@+id/txtProductOptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="product option title"
            android:gravity="start"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:layout_weight="0.2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <TextView
                android:id="@+id/txtProductPriceTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/txtProductPriceTitle"
                android:alpha="0.7"
                android:layout_weight="0.4" />

            <TextView
                android:id="@+id/txtProductPrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="$$$$"
                android:layout_weight="0.6"
                android:gravity="start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <TextView
                android:id="@+id/txtProductQtyInInvoiceTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/txtProductQtyInInvoiceTitle_ProductInInvoiceRecyclerItem"
                android:alpha="0.7"
                android:layout_weight="0.4" />

            <TextView
                android:id="@+id/txtProductQtyInInvoice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Qty"
                android:layout_weight="0.6"
                android:gravity="start" />
        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView

        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgProductImageWrapper"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="24dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp">

        <ImageView
            android:id="@+id/imgProductImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>