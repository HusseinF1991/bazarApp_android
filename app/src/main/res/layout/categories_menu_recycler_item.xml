<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:id="@+id/llCategoriesMenuRecyclerItem"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginBottom="1dp"
    >

    <TextView
        android:id="@+id/txtCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/txtCategoryTitle_CategoriesMenuRecyclerItem"
        android:paddingStart="5dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_weight="0.9"/>

    <ImageView
        android:id="@+id/imgArrowToSubCat"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:src="@drawable/ic_keyboard_arrow_right_black"/>

</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#ececec"
        android:layout_below="@+id/llCategoriesMenuRecyclerItem"/>
</RelativeLayout>