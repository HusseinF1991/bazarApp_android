<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog_background_shape2"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtAlertDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginBottom="5dp"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:gravity="center" />

    <Button
        android:id="@+id/btnAlertDialogConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAlertDialogTitle"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="@string/btnAlertDialogConfirm_AlertDialogLayout"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:background="@drawable/button_background_shape"/>



    <Button
        android:id="@+id/btnAlertDialogCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAlertDialogTitle"
        android:layout_toStartOf="@+id/btnAlertDialogConfirm"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="@string/btnAlertDialogCancel_AlertDialogLayout"
        android:layout_marginEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/button_background_shape"/>

</RelativeLayout>