<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp">


    <TextView
        android:id="@+id/txtReviewCountNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="0"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/txt_circle_background" />

    <TextView
        android:id="@+id/txtReviewerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/txtReviewCountNumber"
        android:text="@string/txtReviewerName_ProductReviewsRecyclerItem"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtReviewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtReviewCountNumber"
        android:layout_alignBottom="@+id/txtReviewCountNumber"
        android:text="yyyy-mm-dd"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/txtReviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtReviewCountNumber"
        android:text="@string/txtReviewTitle_ProductReviewsRecyclerItem"
        android:textStyle="bold"/>


    <LinearLayout
        android:id="@+id/llStars"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtReviewTitle"
        android:layout_marginTop="5dp"
        android:enabled="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProductRateStar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:enabled="false"
            android:src="@drawable/ic_star_grey" />

        <ImageView
            android:id="@+id/imgProductRateStar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:enabled="false"
            android:src="@drawable/ic_star_grey" />

        <ImageView
            android:id="@+id/imgProductRateStar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:enabled="false"
            android:src="@drawable/ic_star_grey" />

        <ImageView
            android:id="@+id/imgProductRateStar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:enabled="false"
            android:src="@drawable/ic_star_grey" />

        <ImageView
            android:id="@+id/imgProductRateStar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:enabled="false"
            android:src="@drawable/ic_star_grey" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtReviewBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llStars"
        android:layout_marginTop="5dp"/>

    <View
        android:layout_width = "match_parent"
        android:layout_height = "2dp"
        android:layout_marginLeft = "10dp"
        android:layout_marginTop = "10dp"
        android:layout_marginRight = "10dp"
        android:background = "@android:color/darker_gray"
        android:layout_below = "@+id/txtReviewBody"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>